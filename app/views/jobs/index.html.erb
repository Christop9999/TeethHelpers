<% @jobs.each do |job| %>
<div class="card" style="width: 20rem;">
  <div class="card-block">
    <h4 class="card-title"><%= job.title %></h4>
    <p class="card-text"><%= job.description %></p>
    <a href="#" class="btn btn-primary">I can do it!</a>
  </div>
</div>


<%end%>







